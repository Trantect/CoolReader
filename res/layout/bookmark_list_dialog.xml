<?xml version="1.0" encoding="utf-8"?>
<!--
   Comment bookmark item
-->

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:layout_marginTop="0dip"
    android:layout_marginBottom="0dip"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="0dip"
    >

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/shortcut_bookmark_item_text"
     android:orientation="horizontal"
	     android:background="#FF404040"
         android:layout_weight="1"
    android:layout_marginTop="0dip"
    android:layout_marginBottom="0dip"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="0dip"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="center_vertical|fill_horizontal"
     android:baselineAligned="false">


     <TextView android:id="@+id/bookmark_item_title"
         style="@android:style/TextAppearance.Medium"
         android:text="@string/win_title_bookmarks"
         android:textStyle="bold" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	    android:layout_marginLeft="8dip"
         android:layout_weight="8"
         android:singleLine="true"
         android:ellipsize="end"
         android:layout_gravity="left|center_vertical" />
    <ImageButton android:id="@+id/bookmark_add"
         android:layout_weight="1"
	     android:background="#FF404040"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="3dip"
        android:layout_gravity="right|center_vertical"
        android:src="@android:drawable/ic_menu_add"
        />
    <ImageButton android:id="@+id/bookmark_close"
         android:layout_weight="1"
	     android:background="#FF404040"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginTop="1dip"
        android:layout_marginBottom="1dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="1dip"
        android:layout_gravity="right|center_vertical"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        />
</LinearLayout>
 <LinearLayout
    android:id="@+id/bookmark_list"
    android:orientation="vertical"
    android:layout_weight="8"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:layout_marginTop="0dip"
    android:layout_marginBottom="0dip"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="0dip"
    >

</LinearLayout>
</LinearLayout>